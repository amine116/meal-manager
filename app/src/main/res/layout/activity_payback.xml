<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16sp"
    android:background="@color/white"
    tools:context=".PaybackActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:background="@color/discussion_write"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/names"/>


        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/due"/>



        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/over_head"/>


        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/enter_amount"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/black_25"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/payback_progress"
        android:contentDescription="@string/image" />

    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/payback_scroll"
        android:layout_height="0sp"
        android:layout_weight="80">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/payback_layout">


        </LinearLayout>

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/black_25"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="20"
        android:id="@+id/layout_totalDueOve"
        android:orientation="vertical"
        android:padding="5sp"
        android:gravity="center"
        android:background="@color/white"
        android:layout_height="0sp">

        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:id="@+id/txtTotalDue"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:id="@+id/txtReminderMoney"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:id="@+id/txtTotalOverHead"
            android:layout_height="wrap_content"/>


    </LinearLayout>


</LinearLayout>