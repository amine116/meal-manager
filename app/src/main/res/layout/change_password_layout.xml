<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10sp"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rectangular_shape_black_25">

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="40"
            android:gravity="center"
            android:text="@string/name"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/edtEnterNameToChange"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="60"
            android:gravity="center"
            android:hint="@string/enter"
            android:autofillHints=""
            android:inputType="text" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rectangular_shape_black_25">

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="40"
            android:gravity="center"
            android:text="@string/previous_password"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/edtEnterPrevPassToChange"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="60"
            android:gravity="center"
            android:hint="@string/enter"
            android:autofillHints=""
            android:inputType="text" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rectangular_shape_black_25">

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="40"
            android:gravity="center"
            android:text="@string/new_password"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/edtEnterNewPassToChange"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="60"
            android:gravity="center"
            android:hint="@string/enter"
            android:autofillHints=""
            android:inputType="text" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rectangular_shape_black_25">

        <Button
            android:layout_width="0sp"
            style="@style/Theme.AppCompat.DayNight"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:gravity="center"
            android:id="@+id/btnSavePass"
            android:text="@string/save"/>

        <Button
            android:layout_width="0sp"
            style="@style/Theme.AppCompat.DayNight"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:gravity="center"
            android:id="@+id/btnCancelPass"
            android:text="@string/cancel"/>


    </LinearLayout>

</LinearLayout>
