<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="10sp"
    android:gravity="center"
    android:background="@color/white"
    android:orientation="vertical">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_progress"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/infoLayout"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/mealOverViewLayout"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:orientation="horizontal"
            android:background="@drawable/announcement_rectangle_shape"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/baseAnnouncement"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:gravity="center"
                android:textStyle="bold"
                android:text="@string/announcement"/>

            <ScrollView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="50">

                <TextView
                    android:id="@+id/txtAnnouncement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text=""/>

            </ScrollView>

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:textSize="12sp"
                android:id="@+id/announcementInstruction"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/announceLayout"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/today_meal_layout_rectangle_shape">

            <TextView
                android:id="@+id/txtNumberOfTodayMeal"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_gravity="center"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/modeLayout"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@drawable/mode_layout_rectangle_shape"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtOverView"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:text="@string/over_view"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center"/>

            <TextView
                android:id="@+id/txtDetails"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:text="@string/details"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center"/>


            <TextView
                android:id="@+id/txtCookBills"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:text="@string/cook_s_bills"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center"/>

            <TextView
                android:id="@+id/txtMarketHistory"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="@string/market_history"
                android:gravity="center"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/labelLayout"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rectangle_shape_label">

            <TextView
                android:id="@+id/nameLabel"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:text="@string/names"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/paidLabel"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:text="@string/paid"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#ffffff"/>


            <TextView
                android:id="@+id/addPaymentLabel"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:text="@string/add_payment"
                android:visibility="gone"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#ffffff"/>



            <TextView
                android:id="@+id/mealLabel"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:text="@string/meal"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#ffffff"/>



            <TextView
                android:id="@+id/dueLabel"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:text="@string/due"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/overHeadLabel"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:text="@string/over_head"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/marketerNameLabel"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="@string/name"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/marketDateLabel"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="@string/details"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/marketAmountLabel"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="@string/total_amount"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btnAddMarket"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:textAllCaps="false"
                android:text="@string/plus"
                android:gravity="center"
                android:textStyle="bold"
                android:visibility="gone"/>


        </LinearLayout>

        <ScrollView
            android:id="@+id/infoScroll"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="60">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/rootLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone">



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/detailsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30sp"
                        android:gravity="center"
                        android:background="@color/light_green"
                        android:text="@string/meal_details"/>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_weight="30">

                        <LinearLayout
                            android:id="@+id/mealD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                        </LinearLayout>

                    </HorizontalScrollView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30sp"
                        android:gravity="center"
                        android:background="@color/light_green"
                        android:text="@string/payment_history"/>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_weight="30">

                        <LinearLayout
                            android:id="@+id/paymentD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                        </LinearLayout>

                    </HorizontalScrollView>


                </LinearLayout>

            </LinearLayout>


        </ScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="40"
            android:background="@color/announcement"
            android:padding="5sp"
            android:id="@+id/totalThingsScroll">

            <LinearLayout
                android:id="@+id/totalThingsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/custom_rectangle_for_stat"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_weight="40"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtTotalMember"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#fcba03"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="7dp"/>

                    <TextView
                        android:id="@+id/txtTotalPaid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#fcba03"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="7dp"/>

                    <TextView
                        android:id="@+id/txtTotalCost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#fcba03"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="7dp"/>

                    <TextView
                        android:id="@+id/txtReminderMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#fcba03"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="7dp"/>

                    <TextView
                        android:id="@+id/txtTotalMeal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"

                        android:textColor="#ffffff"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#fcba03"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="7dp"/>

                    <Button
                        android:id="@+id/addBoarder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:background="@drawable/round_shape"
                        android:text="@string/add_member"/>


                </LinearLayout>


                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#fcba03"/>


                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_weight="60"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="5sp"
                    android:paddingEnd="5sp"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/txtMealRate"
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:gravity="start"/>

                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#fcba03"/>

                        <TextView
                            android:id="@+id/txtExtraMoney"
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:layout_weight="50"
                            android:textStyle="bold"
                            android:gravity="end"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#fcba03"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="7dp"/>


                    <TextView
                        android:id="@+id/lastUpdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#fcba03"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="7dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <Button
                            android:id="@+id/updateData"
                            android:layout_width="0sp"
                            android:layout_weight="50"
                            android:layout_height="wrap_content"
                            android:textAllCaps="false"
                            android:gravity="center"
                            android:background="@drawable/custom_ractangle_shape"
                            style="@style/CardView"
                            android:text="@string/update_meal"/>

                        <TextView
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:background="#3b3e42"/>

                        <Button
                            android:id="@+id/updatePayment"
                            android:layout_width="0sp"
                            android:layout_weight="50"
                            android:layout_height="wrap_content"
                            android:textAllCaps="false"
                            android:background="@drawable/custom_ractangle_shape"
                            style="@style/CardView"
                            android:gravity="center"
                            android:text="@string/update_payment"/>


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="7dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#fcba03"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="7dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnDiscussion"
                            android:layout_width="0sp"
                            android:layout_weight="50"
                            android:textAllCaps="false"
                            android:background="@drawable/custom_ractangle_shape"
                            style="@style/CardView"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="@string/discussion"/>


                        <TextView
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:background="#3b3e42"/>


                        <Button
                            android:id="@+id/eraseAll"
                            android:textAllCaps="false"
                            android:layout_width="0sp"
                            android:layout_weight="50"
                            android:background="@drawable/custom_ractangle_shape"
                            style="@style/CardView"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/erase"/>

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </ScrollView>


    </LinearLayout>



</LinearLayout>