<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16sp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:orientation="vertical"
        android:padding="2sp"
        android:visibility="gone"
        android:id="@+id/bazaar_nameScroll">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/layout_txtHint"
            android:text="@string/select_a_name"/>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:background="@color/white"
            android:layout_height="0sp"
            android:id="@+id/layout_nameScroll"
            android:layout_weight="20">

            <LinearLayout
                android:layout_width="wrap_content"
                android:id="@+id/bazaar_nameLayout"
                android:orientation="horizontal"
                android:layout_height="match_parent">



            </LinearLayout>

        </HorizontalScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black_25"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/nameLayout"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtName"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:gravity="center"
                android:text="@string/name_with_colon"/>

            <EditText
                android:id="@+id/edtName"
                android:hint="@string/enter"
                android:gravity="center"
                android:inputType="text"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:autofillHints="" />

            <ImageView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:textAllCaps="false"
                android:id="@+id/btnLayoutCalc1"
                android:src="@drawable/calcimagee"
                android:contentDescription="@string/image" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/addPaymentLayout"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtAddPayment"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:gravity="center"
                android:text="@string/payment_with_colon"/>

            <EditText
                android:id="@+id/edtAddPayment"
                android:layout_width="0sp"
                android:hint="@string/enter"
                android:inputType="number"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:autofillHints="" />

            <ImageView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:textAllCaps="false"
                android:id="@+id/btnLayoutCalc2"
                android:src="@drawable/calcimagee"
                android:contentDescription="@string/image" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/addMealLayout"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtAddMeal"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:text="@string/meal_with_colon"
                android:gravity="center"/>

            <EditText
                android:id="@+id/edtAddMeal"
                android:layout_width="0sp"
                android:inputType="number"
                android:gravity="center"
                android:hint="@string/enter"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:autofillHints="" />

            <ImageView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:textAllCaps="false"
                android:id="@+id/btnLayoutCalc3"
                android:src="@drawable/calcimagee"
                android:contentDescription="@string/image" />


        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/saveTheMember"
            android:layout_width="0sp"
            android:background="@drawable/shape_button_black_50"
            android:layout_height="match_parent"
            android:layout_weight="50"
            style="@style/AppTheme.NoActionBar"
            android:text="@string/save"/>

        <Button
            style="@style/AppTheme.NoActionBar"
            android:id="@+id/cancelSavingTheMember"
            android:layout_width="0sp"
            android:background="@drawable/shape_button_black_50"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:text="@string/cancel"/>

    </LinearLayout>

</LinearLayout>
